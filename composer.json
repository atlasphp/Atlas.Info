{
    "name": "atlas/info",
    "type": "library",
    "description": "Uses an Atlas.Pdo connection to discover schema information.",
    "keywords": [
        "schema",
        "db",
        "database",
        "sql",
        "ddl"
    ],
    "homepage": "https://github.com/atlasphp/Atlas.Info",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "atlas/pdo": "2.x-dev"
    },
    "require-dev": {
        "pds/skeleton": "^1.0",
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^0.12.82"
    },
    "autoload": {
        "psr-4": {
            "Atlas\\Info\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Atlas\\Info\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "stan": "./vendor/bin/phpstan analyze -c phpstan.neon src"
    }
}
